 # Création de table ginf,
use football; 
create table if not exists football.ginf (
 id_odsp string,
 link_odsp string,
 adv_stats BOOLEAN,
 date date,
 league string,
 season string,
 country string,
 ht string,
 at  string,
 fthg  int,
 ftag int,
 odd_h DOUBLE,
 odd_d DOUBLE,
 odd_a DOUBLE,
 odd_over DOUBLE,
 odd_under DOUBLE,
 odd_bts DOUBLE,
 odd_bts_n DOUBLE
);

## Staging 
CREATE EXTERNAL TABLE IF NOT EXISTS foot.ginf (
 id_odsp string,
 link_odsp string,
 adv_stats BOOLEAN,
 date date,
 league string,
 season string,
 country string,
 ht string,
 at  string,
 fthg  int,
 ftag int,
 odd_h DOUBLE,
 odd_d DOUBLE,
 odd_a DOUBLE,
 odd_over DOUBLE,
 odd_under DOUBLE,
 odd_bts DOUBLE,
 odd_bts_n DOUBLE
)
 ROW FORMAT DELIMITED
  FIELDS TERMINATED BY ','
  STORED AS TEXTFILE
 LOCATION '/user/cloudera/datatp3/football/';

 SELECT * FROM foot.ginf SORT BY id_odsp  DESC LIMIT 2;
 
INSERT INTO TABLE football.ginf SELECT * FROM foot.ginf;
